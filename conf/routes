# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
# ~~~~
GET     /                                                             Secure.login

# Admin Home page
# ~~~~
GET     /admin                                                        HomeController.index

# Import Secure routes
*       /                                                             module:secure

# CRUD URLs
# ~~~~
GET     /admin/itinerarios                                            register.IntinerarioController.list
GET     /admin/itinerario                                             register.IntinerarioController.blank
GET     /admin/itinerario/{id}                                        register.IntinerarioController.show
POST    /admin/itinerario                                             register.IntinerarioController.create
POST    /admin/itinerario/{id}                                        register.IntinerarioController.save
DELETE  /admin/itinerario/{id}                                        register.IntinerarioController.delete


# Service URLs
# ~~~~
POST    /save/bus/position                                            integration.IntegrationServiceController.savePosition
GET     /find/bus/position                                            integration.IntegrationServiceController.findBusByItinerary

# Ignore favicon requests
# ~~~~
GET     /favicon.ico                                                  404

# Map static resources from the /app/public folder to the /public path
# ~~~~
GET     /public/                                                      staticDir:public

# Import CRUD routes
# ~~~~
#*       /admin                                                        module:crud

# Catch all
# ~~~~
*       /{controller}/{action}                                        {controller}.{action}
